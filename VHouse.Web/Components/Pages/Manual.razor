@page "/manual"
@page "/manual/{fileName?}"
@inject HttpClient Http
@inject IJSRuntime JS
@using System.Text.Json

<PageTitle>📚 Manual de Usuario - VHouse</PageTitle>

<div class="manual-container">
    <div class="manual-sidebar">
        <div class="manual-header">
            <h2>📚 Manual VHouse</h2>
            <p>Sistema de Gestión Vegana</p>
        </div>
        
        <nav class="manual-nav">
            <ul class="nav-list">
                @foreach (var section in manualSections)
                {
                    <li class="nav-item @(currentFile == section.File ? "active" : "")">
                        <a href="/manual/@(section.File)" class="nav-link">
                            <span class="nav-icon">@(section.Icon)</span>
                            <span class="nav-title">@(section.Title)</span>
                        </a>
                        @if (section.SubSections?.Any() == true)
                        {
                            <ul class="nav-subsections">
                                @foreach (var sub in section.SubSections)
                                {
                                    <li class="nav-subitem">
                                        <a href="/manual/@sub.File" class="nav-sublink">
                                            <span class="nav-subicon">@sub.Icon</span>
                                            <span class="nav-subtitle">@sub.Title</span>
                                        </a>
                                    </li>
                                }
                            </ul>
                        }
                    </li>
                }
            </ul>
        </nav>
    </div>
    
    <div class="manual-content">
        @if (isLoading)
        {
            <div class="loading-state">
                <div class="spinner">🌱</div>
                <p>Cargando manual...</p>
            </div>
        }
        else if (!string.IsNullOrEmpty(markdownContent))
        {
            <div class="markdown-content" id="markdown-viewer">
                @((MarkupString)renderedHtml)
            </div>
        }
        else
        {
            <div class="welcome-content">
                <div class="welcome-hero">
                    <h1>🌱 Bienvenido al Manual de VHouse</h1>
                    <p class="hero-description">
                        Tu guía completa para dominar el sistema de gestión vegana más avanzado.
                        Cada funcionalidad diseñada para acelerar tu negocio vegano y salvar más vidas animales.
                    </p>
                </div>
                
                <div class="quick-start-grid">
                    <div class="quick-start-card" onclick="window.location.href='/manual/introduction'">
                        <div class="card-icon">🚀</div>
                        <h3>Inicio Rápido</h3>
                        <p>Configura tu tienda vegana en minutos</p>
                    </div>
                    
                    <div class="quick-start-card" onclick="window.location.href='/manual/pos-system'">
                        <div class="card-icon">🎫</div>
                        <h3>Sistema POS</h3>
                        <p>Procesa ventas como Mona la Dona</p>
                    </div>
                    
                    <div class="quick-start-card" onclick="window.location.href='/manual/inventory'">
                        <div class="card-icon">📦</div>
                        <h3>Inventario</h3>
                        <p>Gestiona productos como Sano Market</p>
                    </div>
                    
                    <div class="quick-start-card" onclick="window.location.href='/manual/clients'">
                        <div class="card-icon">👥</div>
                        <h3>Clientes</h3>
                        <p>Administra tu red de distribución</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

