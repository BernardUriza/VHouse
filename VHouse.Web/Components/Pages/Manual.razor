        </div>
        
        <nav class="manual-nav">
            <ul class="nav-list">
                @foreach (var section in manualSections)
                {
                    var isExpanded = expandedSections.Contains(section.File) || 
                                   section.SubSections?.Any(s => s.File == currentFile) == true;
                    var isActive = currentFile == section.File || 
                                 section.SubSections?.Any(s => s.File == currentFile) == true;
                    
