@code {
    [Parameter] public string? FileName { get; set; }
    
    private bool isLoading = false;
    private string markdownContent = "";
    private string renderedHtml = "";
    private string currentFile = "";
    
    private List<ManualSection> manualSections = new()
    {
        new ManualSection { File = "introduction", Icon = "🚀", Title = "Introducción" },
        new ManualSection { File = "getting-started", Icon = "⭐", Title = "Primeros Pasos" },
        new ManualSection { 
            File = "pos-system", 
            Icon = "🎫", 
            Title = "Sistema POS",
            SubSections = new()
            {
                new ManualSection { File = "pos-basics", Icon = "📝", Title = "Conceptos Básicos" },
                new ManualSection { File = "pos-sales", Icon = "💰", Title = "Procesando Ventas" },
                new ManualSection { File = "pos-reports", Icon = "📊", Title = "Reportes y Analytics" }
            }
        },
        new ManualSection { 
            File = "inventory", 
            Icon = "📦", 
            Title = "Inventario",
            SubSections = new()
            {
                new ManualSection { File = "products", Icon = "🌱", Title = "Gestión de Productos" },
                new ManualSection { File = "suppliers", Icon = "🏢", Title = "Proveedores" },
                new ManualSection { File = "stock-control", Icon = "📊", Title = "Control de Stock" }
            }
        },
        new ManualSection { File = "clients", Icon = "👥", Title = "Gestión de Clientes" },
        new ManualSection { File = "orders", Icon = "🛒", Title = "Gestión de Pedidos" },
        new ManualSection { File = "deliveries", Icon = "🚚", Title = "Entregas" },
        new ManualSection { File = "analytics", Icon = "📈", Title = "Analytics y Reportes" },
        new ManualSection { File = "settings", Icon = "⚙️", Title = "Configuración" },
        new ManualSection { File = "troubleshooting", Icon = "🔧", Title = "Resolución de Problemas" }
    };
    
    protected override async Task OnParametersSetAsync()
    {
        currentFile = FileName ?? "";
        
        if (!string.IsNullOrEmpty(FileName))
        {
            await LoadMarkdownFile(FileName);
        }
    }
    
    private async Task LoadMarkdownFile(string fileName)
    {
        try
        {
            isLoading = true;
            StateHasChanged();
            
            var response = await Http.GetAsync($"/manual/{fileName}.md");
            if (response.IsSuccessStatusCode)
            {
                markdownContent = await response.Content.ReadAsStringAsync();
                renderedHtml = ConvertMarkdownToHtml(markdownContent);
            }
            else
            {
                markdownContent = "# 📄 Archivo no encontrado\n\nEsta sección del manual aún no está disponible.";
                renderedHtml = ConvertMarkdownToHtml(markdownContent);
            }
        }
        catch (Exception ex)
        {
            markdownContent = $"# ❌ Error al cargar\n\nNo se pudo cargar el archivo del manual: {ex.Message}";
            renderedHtml = ConvertMarkdownToHtml(markdownContent);
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }
    
    private string ConvertMarkdownToHtml(string markdown)
    {
        // Simple markdown to HTML converter
        var html = markdown
            .Replace("### ", "<h3>").Replace("\n", "</h3>\n")
            .Replace("## ", "<h2>").Replace("\n", "</h2>\n") 
            .Replace("# ", "<h1>").Replace("\n", "</h1>\n")
            .Replace("**", "<strong>").Replace("**", "</strong>")
            .Replace("*", "<em>").Replace("*", "</em>")
            .Replace("\n\n", "</p><p>")
            .Replace("- ", "<li>").Replace("\n", "</li>\n");
            
        // Wrap in paragraphs
        if (!html.StartsWith("<h") && !html.StartsWith("<li"))
        {
            html = "<p>" + html + "</p>";
        }
        
        // Convert lists
        html = System.Text.RegularExpressions.Regex.Replace(html, @"(<li>.*?</li>\n?)+", "<ul>$0</ul>");
        
        return html;
    }
    
    public class ManualSection
    {
        public string File { get; set; } = "";
        public string Icon { get; set; } = "";
        public string Title { get; set; } = "";
        public List<ManualSection>? SubSections { get; set; }
    }
}