@model List<AlbumViewModel>
@{
    ViewData["Title"] = "Gallery";
}

<div class="container-fluid px-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 mb-0">ðŸ“¸ Gallery</h1>
                    <p class="text-muted">Organize your business photos and documents</p>
                </div>
                <a href="@Url.Action("Upload")" class="btn btn-primary">
                    <i class="fas fa-upload"></i> Upload Files
                </a>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-info text-center">
                    <i class="fas fa-camera fa-3x mb-3 text-muted"></i>
                    <h4>No photos yet</h4>
                    <p>Start by uploading your first business photos or documents.</p>
                    <a href="@Url.Action("Upload")" class="btn btn-primary">Upload Files</a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var album in Model)
            {
                <div class="col-xl-3 col-lg-4 col-md-6">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-img-top position-relative" style="height: 200px; overflow: hidden;">
                            @if (!string.IsNullOrEmpty(album.CoverPhotoPath))
                            {
                                <img src="/@album.CoverPhotoPath" alt="@album.Name cover"
                                     class="w-100 h-100" style="object-fit: cover;" />
                            }
                            else
                            {
                                <div class="w-100 h-100 bg-light d-flex align-items-center justify-content-center">
                                    <i class="fas fa-folder fa-3x text-muted"></i>
                                </div>
                            }

                            @if (album.PhotoCount > 0)
                            {
                                <div class="position-absolute top-0 end-0 m-2">
                                    <span class="badge bg-dark">@album.PhotoCount</span>
                                </div>
                            }
                        </div>

                        <div class="card-body">
                            <h5 class="card-title">@album.Name</h5>
                            @if (!string.IsNullOrEmpty(album.Description))
                            {
                                <p class="card-text text-muted small">@album.Description</p>
                            }

                            @if (album.LatestPhotoDate.HasValue)
                            {
                                <small class="text-muted">
                                    <i class="fas fa-clock"></i>
                                    Last updated @album.LatestPhotoDate.Value.ToString("MMM dd, yyyy")
                                </small>
                            }
                        </div>

                        <div class="card-footer bg-transparent border-0">
                            <a href="@Url.Action("Album", new { slug = album.Slug })"
                               class="btn btn-outline-primary w-100">
                                <i class="fas fa-eye"></i> View Album
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        // Add any JavaScript for the gallery index if needed
    </script>
}