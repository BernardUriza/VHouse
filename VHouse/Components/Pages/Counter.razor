@page "/counter"
@rendermode InteractiveServer
@inject ProductService ProductService

<PageTitle>Gestión de Pedidos Inteligentes</PageTitle>

<h1 class="text-primary">Gestión de Tickets</h1>

<section class="container-fluid">
    <div class="row">
        <!-- Order Processing Component -->
        <div class="col-lg-4 col-md-6 mb-3">
            <OrderProcessor OnOrderProcessed="HandleOrderProcessed"></OrderProcessor>
        </div>

        <!-- Product List Component -->
        <div class="col-lg-4 col-md-6 mb-3">
            <ProductList OnProductAdded="HandleProductAdded"></ProductList>
        </div>

        <!-- Ticket Section Component -->
        <TicketSection Ticket="@ticket"></TicketSection>
    </div>
</section>

@code {
    private List<Product> ticket = new();

    private void HandleOrderProcessed(List<Product> selectedProducts)
    {
        ticket.AddRange(selectedProducts);
    }

    private void HandleProductAdded(Product product)
    {
        ticket.Add(product);
    }
}
