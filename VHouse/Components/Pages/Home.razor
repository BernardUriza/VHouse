@page "/"
@rendermode InteractiveServer
@using System.Linq

<PageTitle>VHouse POS</PageTitle>

<div class="pos-header">
    <div class="terminal-info">
        <span class="terminal-id">TERMINAL 01</span>
        <span class="live-time">@DateTime.Now.ToString("HH:mm")</span>
    </div>
    <div class="session-date">@DateTime.Now.ToString("dd/MM/yyyy")</div>
</div>

<div class="stats-grid">
    <div class="stat-box">
        <div class="stat-number">$127,450</div>
        <div class="stat-label">VENTAS MES</div>
    </div>
    <div class="stat-box">
        <div class="stat-number">2,847</div>
        <div class="stat-label">PRODUCTOS</div>
    </div>
    <div class="stat-box">
        <div class="stat-number">1,235</div>
        <div class="stat-label">CLIENTES</div>
    </div>
    <div class="stat-box">
        <div class="stat-number">5,692</div>
        <div class="stat-label">ÓRDENES</div>
    </div>
</div>

<div class="main-content">
    <div class="content-section">
        <div class="section-title">VENTAS HOY</div>
        <table class="data-table">
            <tr><td>Total</td><td>$3,420</td></tr>
            <tr><td>Órdenes</td><td>47</td></tr>
            <tr><td>Promedio</td><td>$72.77</td></tr>
        </table>
    </div>

    <div class="content-section">
        <div class="section-title">ALERTAS</div>
        <div class="alert-list">
            <div class="alert critical">Stock crítico: Leche Avena</div>
            <div class="alert warning">Impresora: papel bajo</div>
            <div class="alert info">Backup: 14:00 OK</div>
        </div>
    </div>

    <div class="content-section">
        <div class="section-title">ACTIVIDAD</div>
        <div class="activity-list">
            <div class="activity-row">
                <span>@DateTime.Now.AddMinutes(-2).ToString("HH:mm")</span>
                <span>Venta $47.50</span>
            </div>
            <div class="activity-row">
                <span>@DateTime.Now.AddMinutes(-5).ToString("HH:mm")</span>
                <span>Cliente VIP</span>
            </div>
            <div class="activity-row">
                <span>@DateTime.Now.AddMinutes(-8).ToString("HH:mm")</span>
                <span>Devolución $23.99</span>
            </div>
        </div>
    </div>
</div>

<div class="footer">
    <div class="system-status">Sistema Online | PostgreSQL | Última act: @DateTime.Now.ToString("HH:mm")</div>
</div>

@code {
    private readonly string deployDate = DateTime.UtcNow.ToString("dd/MM/yyyy HH:mm");
}
