@page "/"
@rendermode InteractiveServer
@using System.Linq

<PageTitle>VHouse - Dashboard</PageTitle>

<div class="hero-section">
    <div class="hero-content">
        <div class="hero-badge">
            <i class="fas fa-leaf"></i>
            <span>Vegano & Sostenible</span>
        </div>
        <h1 class="hero-title">
            Bienvenidos a <span class="gradient-text">VHouse</span>
        </h1>
        <p class="hero-subtitle">
            Tu acceso directo al veganismo, sin excusas al precio que buscas
        </p>
        <div class="hero-stats">
            <div class="stat-card">
                <div class="stat-number">2,847</div>
                <div class="stat-label">Productos</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">1,235</div>
                <div class="stat-label">Clientes</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">5,692</div>
                <div class="stat-label">Órdenes</div>
            </div>
        </div>
    </div>
    <div class="hero-visual">
        <div class="floating-card card-1">
            <i class="fas fa-shopping-cart"></i>
            <span>Pedidos</span>
        </div>
        <div class="floating-card card-2">
            <i class="fas fa-users"></i>
            <span>Clientes</span>
        </div>
        <div class="floating-card card-3">
            <i class="fas fa-box"></i>
            <span>Inventario</span>
        </div>
    </div>
</div>

<div class="dashboard-grid">
    <div class="dashboard-card feature-card">
        <div class="card-header">
            <i class="fas fa-chart-line"></i>
            <h3>Análisis de Ventas</h3>
        </div>
        <div class="card-body">
            <div class="metric-display">
                <div class="metric-value">+23%</div>
                <div class="metric-label">Crecimiento mensual</div>
            </div>
            <div class="progress-bar">
                <div class="progress-fill" style="width: 75%;"></div>
            </div>
        </div>
    </div>

    <div class="dashboard-card feature-card">
        <div class="card-header">
            <i class="fas fa-bell"></i>
            <h3>Notificaciones</h3>
        </div>
        <div class="card-body">
            <div class="notification-item">
                <div class="notification-dot success"></div>
                <span>Nueva orden recibida</span>
                <small>Hace 5 min</small>
            </div>
            <div class="notification-item">
                <div class="notification-dot warning"></div>
                <span>Stock bajo en productos</span>
                <small>Hace 1 hora</small>
            </div>
            <div class="notification-item">
                <div class="notification-dot info"></div>
                <span>Cliente nuevo registrado</span>
                <small>Hace 2 horas</small>
            </div>
        </div>
    </div>

    <div class="dashboard-card feature-card full-width">
        <div class="card-header">
            <i class="fas fa-clock"></i>
            <h3>Actividad Reciente</h3>
        </div>
        <div class="card-body">
            <div class="activity-timeline">
                <div class="timeline-item">
                    <div class="timeline-marker success"></div>
                    <div class="timeline-content">
                        <strong>Orden completada</strong>
                        <p>Pedido #1234 entregado exitosamente</p>
                        <small>@DateTime.Now.AddMinutes(-15).ToString("HH:mm")</small>
                    </div>
                </div>
                <div class="timeline-item">
                    <div class="timeline-marker info"></div>
                    <div class="timeline-content">
                        <strong>Nuevo cliente</strong>
                        <p>María González se registró en la plataforma</p>
                        <small>@DateTime.Now.AddHours(-1).ToString("HH:mm")</small>
                    </div>
                </div>
                <div class="timeline-item">
                    <div class="timeline-marker warning"></div>
                    <div class="timeline-content">
                        <strong>Inventario bajo</strong>
                        <p>Tofu orgánico necesita reposición</p>
                        <small>@DateTime.Now.AddHours(-3).ToString("HH:mm")</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="system-info">
    <div class="info-card">
        <i class="fas fa-server"></i>
        <div class="info-content">
            <div class="info-label">Sistema</div>
            <div class="info-value">Online</div>
        </div>
    </div>
    <div class="info-card">
        <i class="fas fa-clock"></i>
        <div class="info-content">
            <div class="info-label">Última actualización</div>
            <div class="info-value">@deployDate</div>
        </div>
    </div>
    <div class="info-card">
        <i class="fas fa-database"></i>
        <div class="info-content">
            <div class="info-label">Base de datos</div>
            <div class="info-value">PostgreSQL</div>
        </div>
    </div>
</div>

@code {
    private readonly string deployDate = DateTime.UtcNow.ToString("dd/MM/yyyy HH:mm");
}
