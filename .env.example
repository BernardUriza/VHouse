# Database Configuration
DB_HOST=localhost
DB_PORT=5433
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password_here
DB_NAME=vhouse_dev

# Application Configuration
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://localhost:5000;https://localhost:5001

# Connection String (optional - can be built from individual vars above)
CONNECTION_STRING="Host=localhost;Port=5433;Username=postgres;Password=your_secure_password_here;Database=vhouse_dev;Pooling=true;"

# ============================================================================
# AI CONFIGURATION - CLAUDE (PREFERRED) + OPENAI FALLBACK
# ============================================================================

# Claude API Configuration (Anthropic) - PRIORITY #1
CLAUDE_API_KEY=sk-ant-api03-your_claude_api_key_here
# Get your key from: https://console.anthropic.com/

# OpenAI API Configuration - FALLBACK when Claude fails
OPENAI_API_KEY=your_openai_api_key_here
# Get your key from: https://platform.openai.com/api-keys

# AI Service Preferences
AI_PREFERRED_PROVIDER=Claude
AI_FALLBACK_ENABLED=true
AI_REQUEST_TIMEOUT=30000

# Model Selection (optional - defaults configured in appsettings.json)
# CLAUDE_DEFAULT_MODEL=claude-3-5-sonnet-20241022
# OPENAI_DEFAULT_MODEL=gpt-4